        <image class="index-item-bg" src="../../images/doc_bg.png" mode="scaleToFill"></image>
        <view class="index-store-wrap">
          <image class="index-logo" mode="scaleToFill"></image>
          <view class="index-store">
            <view class="index-store-name">丁香诊所滨江店</view>
