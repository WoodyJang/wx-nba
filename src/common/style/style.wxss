/* 向右的箭头 */
.arrow_right{
  width:14rpx;
  height:14rpx;
  border-top: 4rpx solid #ccc;
  border-right: 4rpx solid #ccc;
  transform: rotate(45deg)
}
/* 分割线 */
.divide{
  width: 100%;
  height: 16rpx;
  background-color: #f6f6f6;
}
/* 超过...表示 */
.text_ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 文本溢出，超过2行以...表示 */
.text_overflow_2{
  display: -webkit-box;
  word-break: break-all;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}