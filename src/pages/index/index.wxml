          </view>
        </view>
        <view class="index-hot-item-price">¥298</view>
      </view>
      <view class="index-hot-item">
        <view class="index-hot-item-meal">
          <view class="index-hot-item-meal-logo"></view>
          <view class="index-hot-item-meal-content">
