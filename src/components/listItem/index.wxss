/* 向右的箭头 */
.arrow_right {
  width: 14rpx;
  height: 14rpx;
  border-top: 4rpx solid #ccc;
  border-right: 4rpx solid #ccc;
  transform: rotate(45deg);
}
/* 分割线 */
.divide {
  width: 100%;
  height: 16rpx;
  background-color: #f6f6f6;
}
/* 超过...表示 */
.text_ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
/* 文本溢出，超过2行以...表示 */
.text_overflow_2 {
  display: -webkit-box;
  word-break: break-all;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.list-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  width: 100%;
}
.list-item-wrap {
  display: flex;
  flex-direction: row;
  flex: 1;
  box-sizing: border-box;
}
.list-item-wrap .list-item-logo {
  width: 100rpx;
  height: 100rpx;
  border: 1rpx solid;
  margin-right: 30rpx;
  box-sizing: border-box;
  border-radius: 50%;
}
.list-item-wrap .list-item-content {
  display: flex;
  flex-direction: column;
  flex: 1;
  margin-right: 30rpx;
}
.list-item-wrap .list-item-content-wrap {
  display: flex;
  flex-direction: row;
  color: #303030;
}
.list-item-wrap .list-item-content-wrap .list-item-content-name {
  font-weight: 500;
  margin-right: 15rpx;
  font-size: 30rpx;
}
.list-item-wrap .list-item-content-wrap .list-item-content-title {
  font-weight: 400;
  font-size: 26rpx;
  line-height: 37rpx;
}
.list-item-wrap .list-item-content-staff {
  color: #646464;
  font-size: 24rpx;
  margin-bottom: 15rpx;
  margin-top: 10rpx;
}
.list-item-wrap .list-item-content-expert {
  color: #979797;
  font-size: 22rpx;
}
