        <view class="index-message-item-dot"></view>
          <view class="index-message-item-content">您的血常规报告已出</view>
        </view>
      </view>
     </view>
    <view class="index-message-arrow">
      <view class="index-message-info"></view>
      <view class="index-message-arrow-right arrow_right"></view>
    </view>
  </view>
  <view class="divide"></view>
  <view class="index-hot-goods">
    <view class="index-title">
      <view class="index-title-content">热门商品</view>
      <view class="index-title-all">查看全部</view>
    </view>
    <view class="index-hot-items">
