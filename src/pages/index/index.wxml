          </view>
        </view>
        <view class="index-hot-item-price text_ellipsis">¥29822222.05</view>
      </view>
    </view>
  </view>
  <view class="divide"></view>
  <view class="index-hot-goods">
    <view class="index-title">
      <view class="index-title-content">医生团队</view>
